<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<virtualType name="CustomMenuGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
		<arguments>
			<argument name="collection" xsi:type="object" shared="false">SimplifiedMagento\Database\Model\ResourceModel\Post\Collection</argument>
			<argument name="filterpool" xsi:type="object" shared="false">MemberGridFilterPool</argument>
		</arguments>
	</virtualType>   
	<virtualType name="MemberGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
		<arguments>
			<argument name="appliers" xsi:type="array">
				<item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\RegularFilter</item>
				<item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\FullText</item>
			</argument>
		</arguments>
	</virtualType> 
	<type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
		<arguments>
			<argument name="collections" xsi:type="array">
				<item name="custommenu_listing_data_source" xsi:type="string">SimplifiedMagento\Database\Model\Resource\Grid\Collection</item>
			</argument>
		</arguments>
	</type>
	<virtualType name="SimplifiedMagento\Database\Model\Resource\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
		<arguments>
			<argument name="mainTable"  xsi:type="string">post</argument>
			<argument name="resourceModel"  xsi:type="string">SimplifiedMagento\Database\Model\ResourceModel\Post</argument>
		</arguments>
	</virtualType>   
</config>