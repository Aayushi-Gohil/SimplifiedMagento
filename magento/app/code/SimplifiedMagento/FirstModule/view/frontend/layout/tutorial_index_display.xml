<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block class="SimplifiedMagento\FirstModule\Block\Display" name="firstmodule_display" template="SimplifiedMagento_FirstModule::sayhello.phtml" />
        <block class="SimplifiedMagento\FirstModule\Block\Display" name="firstmodule_display_name" template="SimplifiedMagento_FirstModule::sayname.phtml" />
        <block class="SimplifiedMagento\FirstModule\Block\Display" name="firstmodule_display_store" template="SimplifiedMagento_FirstModule::store.phtml" />
        <block class="SimplifiedMagento\FirstModule\Block\Display" name="firstmodule_display_featured" template="SimplifiedMagento_FirstModule::featured.phtml">
        	<arguments>
        		<argument name="view_model" xsi:type="object">SimplifiedMagento\FirstModule\ViewModel\Example</argument>
        	</arguments>
        </block>
        <block class="SimplifiedMagento\FirstModule\Block\Products" name="firstmodule_display_product" template="SimplifiedMagento_FirstModule::product.phtml" />
    </referenceContainer>
</page>