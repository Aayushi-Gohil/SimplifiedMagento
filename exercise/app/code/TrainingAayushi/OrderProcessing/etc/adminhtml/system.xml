<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="orderprocessing" translate="label" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Order Fees</label>
            <tab>sales</tab>
            <resource>TrainingAayushi_OrderProcessing::extension_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Order Processing Configuration</label>
                <field id="status" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Apply Additional Fee</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="fee" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Order Processing Fee</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <comment>Add fee in %. This fee will be added to the product price as an additional fee.</comment>
                    <depends>
                        <field id="orderprocessing/general/status">1</field>
                    </depends>
                </field>
            </group>
        </section>
	</system>
</config>
