<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="3columns">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="mainblock"> 
		        <arguments> 
		            <argument name="block_id" xsi:type="string">mainblock</argument>
		        </arguments> 
		    </block> 
        </referenceContainer>
        <referenceContainer name="sidebar.main">
		    <block class="Magento\Cms\Block\Block" name="leftblock"> 
		        <arguments> 
		            <argument name="block_id" xsi:type="string">leftblock</argument>
		        </arguments> 
		    </block> 
		</referenceContainer>
		<referenceContainer name="sidebar.additional">
		    <block class="Magento\Cms\Block\Block" name="rightblock"> 
		        <arguments> 
		            <argument name="block_id" xsi:type="string">rightblock</argument>
		        </arguments> 
		    </block> 
		</referenceContainer>
    </body>
</page>