	<type name="Magento\Framework\Console\CommandList">
       <arguments>
           <argument name="commands" xsi:type="array">
               <item name="simplifiedMagentoSayHello" xsi:type="object">SimplifiedMagento\FirstModule\Console\Sayhello</item>
           </argument>
       </arguments>
   </type>
	<type name="\Magento\Catalog\Model\Product">
		<plugin name="before_set_name" type="SimplifiedMagento\FirstModule\Plugin\PluginSolution" sortOrder="10" />
	</type>
	<virtualType name="virtualType" type="SimplifiedMagento\FirstModule\Model\Yellow">
		<arguments>
			<argument name ="brightness" xsi:type="object">SimplifiedMagento\FirstModule\Model\High</argument>
		</arguments>
	</virtualType>
	<type name="SimplifiedMagento\FirstModule\Model\Pencil">
		<arguments>
			<!-- <argument name ="color" xsi:type="object">virtualType</argument> -->
			<argument name ="color" xsi:type="object">SimplifiedMagento\FirstModule\Model\Red</argument>
